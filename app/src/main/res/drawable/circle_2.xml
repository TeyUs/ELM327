<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="140"
            android:toDegrees="140"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:innerRadius="98dp"
                android:thicknessRatio="5.2"
                android:useLevel="true">
                <gradient
                    android:type="radial"
                    android:gradientRadius="100dp"
                    android:startColor="@color/colorRPM"
                    android:endColor="@color/colorSpeed"/>
            </shape>
        </rotate>
    </item>
</layer-list>