<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="151"
            android:toDegrees="150"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="ring"
                android:innerRadius="98dp"
                android:thicknessRatio="5.4"
                android:useLevel="true">
                <gradient
                    android:type="sweep"
                    android:useLevel="true"
                    android:gradientRadius="100dp"
                    android:startColor="@color/dark_black"
                    android:endColor="@color/colorAccent"/>
            </shape>
        </rotate>
    </item>
</layer-list>